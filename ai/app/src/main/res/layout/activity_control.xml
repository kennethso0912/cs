<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gifview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/control_bg"
    android:gravity="center_horizontal|top"
    android:keepScreenOn="true"
    >

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/giv_demo"
            android:layout_width="674dp"
            android:layout_height="220dp"
            android:layout_marginTop="127dp"
            android:layout_marginBottom="30dp"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textColor="#0039DF"
            android:text="@string/ing"
            android:gravity="left"
            android:paddingLeft="-1dp"
            android:layout_marginLeft="420dp"
            android:layout_gravity="left"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingTop="0dp"
            >
        <Button
            android:id="@+id/btn_pause"
            android:layout_width="167dp"
            android:layout_height="44.5dp"
            android:text="@string/pause_wg"
            android:textColor="#ebebeb"
            android:textSize="18dp"
            android:onClick="pause"
            android:layout_gravity="top"
            android:layout_marginTop="40dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/btn_bg_pause_n_continu"

            />

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="167dp"
            android:layout_height="44.5dp"
            android:text="@string/continue_wg"
            android:textColor="#ebebeb"
            android:textSize="18dp"
            android:onClick="continu"
            android:layout_gravity="top"
            android:layout_marginTop="40dp"
            android:layout_marginRight="24dp"
            android:visibility="gone"
            android:background="@drawable/btn_bg_pause_n_continu"

            />

        <Button
            android:id="@+id/btn_end"
            android:layout_width="167dp"
            android:layout_height="44.5dp"
            android:text="@string/end_wg"
            android:textSize="18dp"
            android:textColor="#ebebeb"
            android:onClick="end"
            android:layout_gravity="top"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_bg_end"

            />
        </LinearLayout>

</LinearLayout>
