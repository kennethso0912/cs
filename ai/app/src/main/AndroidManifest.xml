<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ubtechinc.cruiser.wayguide">
    <!--bugly配置权限start-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!--bugly配置权限end-->

    <application
        android:name=".app.AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <data android:host=".mainactivity" android:scheme="com.ubtechinc.cruzr.smartintro"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.PicAndVideoUINewActivity"
            android:screenOrientation="landscape"
            android:enabled="true"
            android:exported="true"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="com.cruzr.wayguider.picvideo"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!--<activity-->
            <!--android:name=".ui.TransparentUIActivity"-->
            <!--android:screenOrientation="landscape"-->
            <!--android:enabled="true"-->
            <!--android:exported="true"-->
            <!--android:theme="@style/TranslucentTheme">-->
            <!--<intent-filter>-->
                <!--<action android:name="com.cruzr.wayguider.tts"/>-->
                <!--<category android:name="android.intent.category.DEFAULT"/>-->
            <!--</intent-filter>-->
        <!--</activity>-->

        <activity
            android:name=".ui.ImageActivity"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar">
        </activity>

        <!--游览操作界面-->
        <activity
            android:name=".ui.ControlActivity"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="com.cruzr.wayguider.UI"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- PC同步数据成功广播 -->
        <receiver android:name=".receiver.PcSynDataReceiver">
            <intent-filter>
                <action android:name="com.ubtechinc.cruzr.map.action.PC_SYNC_MAP_DATA_COMPELETED"/>
            </intent-filter>
        </receiver>

        <!-- 关机的广播-->
        <receiver android:name=".receiver.PowerOffReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.ubtinc.cruzr.action.POWEROFF"/>
            </intent-filter>
        </receiver>

        <!-- 提供给外部通过广播调启"开始游览"-->
        <receiver android:name=".receiver.OutSideStartReceiver">
            <intent-filter>
                <action android:name="com.ubtechinc.cruzr.intent.action.START_WAYGUIDE"/>
            </intent-filter>
        </receiver>

        <!-- 要去充电的广播-->
        <receiver android:name=".receiver.RobotGotoChargeReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.ubtechinc.cruzrpowersettings.gotocharge"/>
            </intent-filter>
        </receiver>

        <!-- downloadProvider下载广播监听-->
        <receiver android:name=".receiver.DownloadMediaObserveReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE"/>
            </intent-filter>
        </receiver>

        <!--<receiver android:name=".receiver.BootReceiver" android:enabled="true"-->
            <!--android:exported="true" >-->
            <!--<intent-filter android:priority="90000" >-->
                <!--<action android:name="android.intent.action.BOOT_COMPLETED"/>-->
            <!--</intent-filter>-->
        <!--</receiver>-->

        <!-- 游览拉取数据服务 -->
        <service android:name=".service.FetchDataService"></service>

        <service
            android:name="com.ubtechinc.cruiser.wayguide.ui.TTsService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.cruzr.wayguider.service.tts"/>
            </intent-filter>
        </service>

        <!--主线服务-->
        <service android:name="com.ubtechinc.cruiser.wayguide.service.ServiceProxy"  android:exported="false"/>
        <service
            android:name="com.ubtechinc.cruzr.sdk.speech.SpeechService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.ubtechinc.cruzr.smartintro.Cruiser_Service"/>
            </intent-filter>
        </service>

        <meta-data android:name="cruiser_appid" android:value="123"/>
        <meta-data android:name="cruiser_priority" android:value="1" />


        <!-- 以下是老的指令配置 start
        <meta-data android:name="cruiser_call" android:value="@string/cmd"/>
        <meta-data android:name="cruiser_call_en" android:value="@string/cmd_en"/>
         以下是老的指令配置 end-->

    </application>


</manifest>