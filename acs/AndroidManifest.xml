        <service
            android:name="com.ubtechinc.cruzr.coreservices.services.CruzrBlueToothSerialPortServices"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.ubtechinc.cruzr.coreservices.services.CruzrBlueToothSerialPortServices" />
            </intent-filter>
        </service>

        <!-- 主服务 -->
        <service
            android:name="com.ubtechinc.cruzr.coreservices.services.MainService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.ubtechinc.cruzr.coreservices.services.MainService" />
            </intent-filter>
        </service>

        <!-- 二维码扫描服务 -->

        <service
            android:name="com.ubtechinc.cruzr.coreservices.services.CruzrQRCodeService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.ubtechinc.cruzr.coreservices.services.CruzrQRCodeService" />
            </intent-filter>
        </service>

        <!-- 讯飞语音服务 -->
        <service
            android:name="com.ubtechinc.cruzr.coreservices.services.IflytekSpeeckServices"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.ubtechinc.cruzr.coreservices.services.IflytekSpeeckServices" />
            </intent-filter>
        </service>

        <!-- Nuance语音服务 -->
        <service
            android:name="com.ubtechinc.cruzr.coreservices.services.NuanceSpeeckServices"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.ubtechinc.cruzr.coreservices.services.NuanceSpeeckServices" />
            </intent-filter>
        </service>

