        <!-- 动作播放服务 -->
        <service
            android:name="com.ubtechinc.cruzr.coreservices.services.CruzrActionServices"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.ubtechinc.cruzr.coreservices.services.CruzrActionServices" />
            </intent-filter>
        </service>

