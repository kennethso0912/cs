        <service
            android:name="com.ubtechinc.cruzr.coreservices.services.CruzrXmppServices"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.ubtechinc.cruzr.coreservices.services.CruzrXmppServices" />
            </intent-filter>
        </service>
        <!-- ROS控制服务 -->
