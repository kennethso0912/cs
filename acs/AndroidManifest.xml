        <service
            android:name="com.ubtechinc.cruzr.coreservices.services.RosControlServices"
            android:process=":remote1"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.ubtechinc.cruzr.coreservices.services.RosControlServices" />
            </intent-filter>
        </service>

        <!-- 表情设置服务 -->

        <service
            android:name="com.ubtechinc.cruzr.coreservices.face.CruzrCoreFaceServie"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.ubtechinc.cruzr.coreservices.face.CruzrCoreFaceServie" />
            </intent-filter>
        </service>
        <!-- android:theme="@style/CaptureTheme" -->
        <activity
            android:name="com.google.zxing.client.android.CaptureActivity"
            android:clearTaskOnLaunch="true"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity
            android:name="com.hardware.test.AudioMainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.hardware.test.MusicPlayerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name="com.hardware.test.MusicService" >
        </service>
        <!--
        <activity
            android:name="com.hardware.test.CameraActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
        </activity>
        -->
        <activity
            android:name="com.google.zxing.client.android.encode.EncodeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="com.google.zxing.client.android.ENCODE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- This allows us to handle the Share button in Contacts. -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/x-vcard" />
            </intent-filter>
            <!-- This allows us to handle sharing any plain text . -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ubtechinc.cruzr.coreservices.camera.CameraActivity"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>

        <receiver
            android:name="com.ubtechinc.cruzr.coreservices.receiver.BootReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter android:priority="90000" >

                <!-- 系统启动完成后会调用 -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <!-- 解锁完成后会调用 -->
                <action android:name="android.intent.action.USER_PRESENT" />
                <!-- 监听情景切换 -->
                <action android:name="android.media.RINGER_MODE_CHANGED" />
            </intent-filter>
        </receiver>
        <!-- 注意这个地方的位置，是在application标签里面；android:authorities对应Provider.AUTHORITY -->
        <provider
            android:name="com.ubtechinc.cruzr.coreservices.db.provider.Alpha2Provider"
            android:authorities="com.ubtechinc.alpha2services.alpha2app"
            android:exported="true" />
        <provider
            android:name="com.ubtechinc.cruzr.coreservices.db.provider.StateProvider"
            android:authorities="com.ubtechinc.alpha2services.alpha2state"
            android:exported="true" />
        <provider
            android:name="com.ubtechinc.cruzr.coreservices.db.provider.Alpha2SpeechPluginProvider"
            android:authorities="com.ubtechinc.alpha2services.alpha2speech"
            android:exported="true" />
        <!-- 监听APP 安装/卸载广播 -->
        <!-- android:name="com.ubtechinc.utils.appmanager.AppManager$AppPackageBroadcast" -->
        <receiver
            android:name="com.ubtechinc.cruzr.coreservices.appmanager.AppManager$AppPackageBroadcast"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.ubtechinc.cruzr.coreservices.appmanager.RestartBroadcast"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.RestartAlphaBroadcast" />
            </intent-filter>
        </receiver>

        <!-- 监听APP 安装/卸载广播 end -->
        <!-- 闹钟 -->

        <receiver android:name="com.ubtechinc.cruzr.coreservices.deskclock.AlarmReceiver" >
            <intent-filter>
                <action android:name="com.ubtechinc.alpha2services.ALARM_ALERT" />
                <action android:name="alarm_killed" />
                <action android:name="cancel_snooze" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.ubtechinc.cruzr.coreservices.deskclock.AlarmInitReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
                <action android:name="android.intent.action.LOCALE_CHANGED" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.ubtechinc.cruzr.coreservices.deskclock.AlarmProvider"
            android:authorities="com.android.deskclock23"
            android:exported="true" />
        <!-- 闹钟 -->

